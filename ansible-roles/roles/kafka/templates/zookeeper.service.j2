[Unit]
Requires=network.target remote-fs.target
After=network.target remote-fs.target

[Service]
Type=simple
User={{ kafka_user }}
ExecStart={{ kafka_data_dir }}/bin/zookeeper-server-start.sh {{ kafka_conf_dir }}/config/zookeeper.properties
ExecStop={{ kafka_data_dir }}/bin/zookeeper-server-stop.sh
Restart=on-abnormal

[Install]
WantedBy=multi-user.target